---
interface Props {
	title: string;
	topic: string;
	link: string;
}

const { title, topic, link } = Astro.props;
---

<li class="link-card">
	<h3>
		{title}
	</h3>
	<p><a href={link}>Learn more about {topic}</a></p>
</li>
<style lang="scss">
	.link-card {
		list-style: none;
		display: flex;
		flex-direction: column;
		padding: 2rem;
		background-color: #bab7d5;
		background-image: none;
		background-size: 400%;
		border: 2px solid #262161;
		border-radius: 7px;
		background-position: 100%;
		text-align: center;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		opacity: 0.55;

		h3 {
			color: #000;
			font-weight: bold;
			transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		}
		a {
			color: #262161;
			font-weight: bold;
			text-decoration: none;
			&:hover,
			&:active,
			&:focus {
				text-decoration: underline;
			}
		}
	}
</style>
