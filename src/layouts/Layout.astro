---
// Supports weights 100-900
import "@fontsource-variable/montserrat";
import "../styles/global.scss";
import Navigation from "../components/Navigation.astro";
import { Image } from "astro:assets";

interface Props {
	title: string;
	page: string;
}

const { title, page } = Astro.props;
const year = new Date().getFullYear();
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body id={page}>
		<a class="sr-only focus:not-sr-only skip-link" href="#about"
			>Skip to main content</a
		>
		<header class="navbar">
			<nav class="navbar-container">
				<input
					type="checkbox"
					id="menu-toggle"
					role="button"
					aria-label="Display the menu"
					aria-expanded="false"
					aria-controls="menu"
				/>
				<label class="menu-btn" for="menu-toggle">
					<span></span>
				</label>
				<Navigation />
			</nav>
		</header>

		<slot />

		<footer>
			<p>
				&copy;<span id="footer-year">{year}</span>&nbsp;Fenix Therapeutic
				Services. All rights reserved.
			</p>
		</footer>
	</body>
	<script is:inline data-astro-rerun>
		document.getElementById("footer-year").innerText = new Date().getFullYear();

		document.querySelector("nav input").onclick = function () {
			if (this.checked) this.setAttribute("aria-expanded", true);
			else this.setAttribute("aria-expanded", false);
